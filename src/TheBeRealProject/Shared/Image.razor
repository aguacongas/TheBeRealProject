@if (Assets?.Length > 0)
{
    <img class="@CssClass" src="@Src" @onmouseover="() => OnMouseOver.InvokeAsync(Assets.GetBoundIndex(Index))" />
}
@code {
    string? Src => Assets?[Assets.GetBoundIndex(Index)].Path;
    [Parameter]
    public GitHubItem[]? Assets { get; set; }
    [Parameter]
    public int Index { get; set; }
    [Parameter]
    public string? CssClass { get; set; }
    [Parameter]
    public EventCallback<int> OnMouseOver { get; set; }
}
